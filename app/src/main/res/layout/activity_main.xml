<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#211d2d">
    <ImageView
        android:id="@+id/top_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sachin"
            app:civ_border_width="1.5dp"
            app:civ_border_color="#02fe96"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#02fe96"
            android:layout_gravity="center_horizontal"
            android:text="Sachin Bakshi"
            android:fontFamily="sans-serif-thin"
            android:textStyle="normal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/quick_start_cropped_image"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:onClick="onSelectImageClick"
        android:contentDescription="@string/result_image_desc"
        android:src="@drawable/placeholder"/>

        <ImageView
            android:id="@+id/quick_start_cropped_image2"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:onClick="onSelectImageClick2"
            android:contentDescription="@string/result_image_desc"
            android:src="@drawable/placeholder"/>

        <ImageView
            android:id="@+id/quick_start_cropped_image3"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:onClick="onSelectImageClick3"
            android:contentDescription="@string/result_image_desc"
            android:src="@drawable/placeholder"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quick_start_cropped_image4"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:onClick="onSelectImageClick4"
            android:contentDescription="@string/result_image_desc"
            android:src="@drawable/placeholder"/>

        <ImageView
            android:id="@+id/quick_start_cropped_image5"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:onClick="onSelectImageClick5"
            android:contentDescription="@string/result_image_desc"
            android:src="@drawable/placeholder"/>

        <ImageView
            android:id="@+id/quick_start_cropped_image6"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:onClick="onSelectImageClick6"
            android:contentDescription="@string/result_image_desc"
            android:src="@drawable/placeholder"/>



    </LinearLayout>
        <ImageView
            android:id="@+id/bottom_pic"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:contentDescription="@string/result_image_desc"
            android:src="@drawable/choose"/>

    </LinearLayout>


</LinearLayout>
